<!-- itemList.ejs -->
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Item List</title>
</head>

<body>
    <h1>Item List</h1>

    <% if (items && items.length > 0) { %>
        <table border="1">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Product Name</th>
                    <th>Price</th>
                    <th>Add to Cart</th>
                    <th>More Details</th>
                </tr>
            </thead>
            <tbody>
                <% items.forEach(item => { %>
                    <tr>
                        <td><%= item.id %></td>
                        <td><%= item.name %></td>
                        <td><%= item.price %></td>
                        <td>
                            <form action="/addToCart" method="post">
                                <input type="hidden" name="productId" value="<%= item.id %>">
                                <button type="submit">Add to Cart</button>
                            </form>
                        </td>
                        <td>
                            <a href="/productDetails/<%= item.id %>">More Details</a>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    <% } else { %>
        <p>No items available.</p>
    <% } %>
</body>

</html>
