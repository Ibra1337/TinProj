<!-- cart.ejs -->
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles.css">
    <title>Shopping Cart</title>
</head>

<body>

    <h1>Your Shopping Cart</h1>

    <% if (dispCart && dispCart.length > 0) { %>
    <table border="1">
        <thead>
            <tr>
                <th> </th>
                <th>Name</th>
                <th>Description</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            <% dispCart.forEach(item => { %>
                <tr>
                    <td>
                        <img src="./images/itemImages/<%= item.prodId %>.png" alt="<%= item.name %> Image" width="100" height="75">
                    </td>
                    <td><%= item.name %></td>
                    <td><%= item.shortDesc %></td>
                    <td>$<%= item.price.toFixed(2) %></td>
                    <td><%= item.amount %></td>
                    <td>$<%= (item.price * item.amount).toFixed(2) %></td>
                </tr>
            <% }); %>
        </tbody>
    </table>
    <form action="/login" method="get">
        <label> in order to purchase you have to be loged in </label>
        <button type="submit">Purchanse</button>
    </form>
    <h1>total sum is <%= sum %> </h1>
    <% } else { %>
        <p>Your cart is empty.</p>
    <% } %>

</body>

</html>
